<Window x:Class="EmeralEngine.Project.SelectProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmeralEngine"
        mc:Ignorable="d"
        Title="プロジェクト選択" Height="400" Width="500"
        ResizeMode="NoResize">
    <Grid>
        <Label Foreground="Black" FontSize="30" Content="プロジェクト選択" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ScrollViewer Grid.Row="1" Height="310" Margin="0,40,0,0" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="Projects"/>
        </ScrollViewer>
        <Button Content="新規作成" FontSize="20" Margin="0,10,16,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" Width="88" Click="Button_Click"/>

    </Grid>
</Window>
