<Page x:Class="EmeralEngine.Resource.Character.SelectCharacterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EmeralEngine.Resource.Character"
      mc:Ignorable="d" 
      d:DesignHeight="521" d:DesignWidth="472"
      Title="キャラクター選択画面">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Button Content="キャラクターを新規作成" Height="40" FontSize="20" HorizontalAlignment="Left" Margin="257,0,0,0" VerticalAlignment="Center" Click="Button_Click"/>
        <ScrollViewer Name="CharacterViewer" Grid.Row="1" BorderBrush="#FF3B4D4C" VerticalScrollBarVisibility="Auto">
            <Grid Name="CharacterGrid"/>
        </ScrollViewer>
    </Grid>
</Page>
