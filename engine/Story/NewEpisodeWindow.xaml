<Window x:Class="EmeralEngine.Story.NewEpisodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmeralEngine.Story"
        mc:Ignorable="d"
        Title="NewEpisodeWindow" Height="172" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="追加するエピソードの名前" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Row="1" Name="EpisodeName" FontSize="20" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="35" TextChanged="EpisodeName_TextChanged" KeyDown="OnKeyDown"/>
        <Button x:Name="CreateButton" Grid.Row="2" Content="作成" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Height="43" Width="80" Click="CreateButton_Click"/>
    </Grid>
</Window>
