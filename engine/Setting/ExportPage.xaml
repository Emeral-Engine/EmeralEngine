<Page x:Class="EmeralEngine.Setting.ExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EmeralEngine.Setting"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="666" Background="White"
      Title="ExportPage">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="スクリプト">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="コンテンツの出力フォーマット"/>
                <RichTextBox Grid.Row="1" Name="ContentFormat" Width="400" Height="70" TextChanged="ContentFormat_TextChanged"/>
                <Label Grid.Column="1" Content="各種割り当て"/>
                <TextBlock Grid.Row="1" Grid.Column="1">
                    %(n)        : 順番
                    <LineBreak/>
                    %(scenes)   : シーン情報
                </TextBlock>
                <Label Grid.Row="2" Content="シーンの出力フォーマット"/>
                <RichTextBox Grid.Row="3" x:Name="SceneFormat" Width="400" Height="95" HorizontalAlignment="Left" TextChanged="SceneFormat_TextChanged"/>
                <TextBlock Grid.Row="3" Grid.Column="1">
                    %(bg)       : 背景
                    <LineBreak/>
                    %(bgm)      : BGM
                    <LineBreak/>
                    %(fadeout)  : フェードアウト時間（秒）
                    <LineBreak/>
                    %(fadein)   : フェードイン時間（秒）
                    <LineBreak/>
                    %(wait) : シーンが始まるまでに待つ時間
                    <LineBreak/>
                    %(scripts)  : スクリプト情報
                </TextBlock>
                <Label Grid.Row="4" Content="スクリプトの出力フォーマット"/>
                <RichTextBox x:Name="ScriptFormat" Grid.Row="5" Width="400" Height="150" TextChanged="ScriptFormat_TextChanged"/>
                <TextBlock Grid.Row="5" Grid.Column="1">
                    %(pictures) : 立ち絵の文字列配列
                    <LineBreak/>
                    %(speaker)  : セリフの話者
                    <LineBreak/>
                    %(script)   : セリフ
                </TextBlock>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
